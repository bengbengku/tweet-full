extends layouts/main-layout.pug

block content
    if !profileUser
        .error-page
            div
                h1(data-h1="404") 404
                p(data-p="NOT FOUND") NOT FOUND
        #profileParticle
    else
        span #{profileUser.firstName}
        .postContainer

        +createPostModals(userLoggedIn)


block scripts
    script(src="/js/profile.js")
    script(src="/js/profileParticle.js")
